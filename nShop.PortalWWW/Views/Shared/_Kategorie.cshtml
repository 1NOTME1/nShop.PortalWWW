@model IEnumerable<nShop.Data.Data.Sklep.Kategoria>

<div class="container my-4">
    <h2 class="text-center mb-4">Kategorie</h2>
    <div class="row">
        @foreach (var kategoria in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@kategoria.Nazwa</h5>
                        <p class="card-text">@kategoria.Opis</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Produktów: @kategoria.Produkty.Count()</small>
                            <a href="@Url.Action("ByCategory", "Produkty", new { id = kategoria.Id })" class="btn btn-sm btn-outline-secondary">Zobacz produkty</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
