@model nShop.Data.Data.Sklep.Recenzja

@{
    ViewData["Title"] = "Edytuj Recenzję";
}

<h1 style="text-align: center;">Edytuj Recenzję</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" style="margin-top: 20px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Tekst" class="control-label label">Tekst Recenzji</label>
                    <textarea asp-for="Tekst" class="form-control"></textarea>
                    <span asp-validation-for="Tekst" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ocena" class="control-label label">Ocena</label>
                    <input asp-for="Ocena" class="form-control" />
                    <span asp-validation-for="Ocena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UzytkownikId" class="control-label label">Użytkownik</label>
                    <select asp-for="UzytkownikId" class="form-control" asp-items="@(new SelectList(ViewBag.Uzytkownicy, "Value", "Text"))"></select>
                    <span asp-validation-for="UzytkownikId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProduktId" class="control-label label">Produkt</label>
                    <select asp-for="ProduktId" class="form-control" asp-items="@(new SelectList(ViewBag.Produkty, "Value", "Text"))"></select>
                    <span asp-validation-for="ProduktId" class="text-danger"></span>
                </div>

                <div class="form-group" style="text-align: center;">
                    <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
