@model ElementZamowienia

@{
    ViewData["Title"] = "Edytuj Element Zamówienia";
}

<h1 style="text-align: center;">Edytuj Element Zamówienia</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="ZamowienieId" class="control-label">Zamówienie</label>
                    <select asp-for="ZamowienieId" class="form-control" asp-items="ViewBag.ZamowienieId"></select>
                    <span asp-validation-for="ZamowienieId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProduktId" class="control-label">Produkt</label>
                    <select asp-for="ProduktId" class="form-control" asp-items="ViewBag.ProduktId"></select>
                    <span asp-validation-for="ProduktId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ilosc" class="control-label">Ilość</label>
                    <input asp-for="Ilosc" class="form-control" />
                    <span asp-validation-for="Ilosc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CenaJednostkowa" class="control-label">Cena Jednostkowa</label>
                    <input asp-for="CenaJednostkowa" class="form-control" />
                    <span asp-validation-for="CenaJednostkowa" class="text-danger"></span>
                </div>

                <div class="form-group" style="text-align: center;">
                    <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
