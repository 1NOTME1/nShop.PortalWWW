@model IEnumerable<nShop.Data.Data.Sklep.ElementZamowienia>

@{
    ViewData["Title"] = "Lista Elementów Zamówienia";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Utwórz nowy</a>
</p>
<table class="table table-hover">
    <!-- Dodano klasę table-hover -->
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ilosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenaJednostkowa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zamowienie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produkt)
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ilosc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CenaJednostkowa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zamowienie.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produkt.Nazwa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
