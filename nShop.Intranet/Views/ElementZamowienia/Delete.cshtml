@model ElementZamowienia

@{
    ViewData["Title"] = "Usuń Element Zamówienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Usuń Element Zamówienia</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center">Czy na pewno chcesz usunąć ten element?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Ilość:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Ilosc)</dd>
                <dt class="col-sm-4">Cena jednostkowa:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CenaJednostkowa)</dd>
                <dt class="col-sm-4">ID Zamówienia:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Zamowienie.Id)</dd>
                <dt class="col-sm-4">Nazwa Produktu:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Produkt.Nazwa)</dd>
            </dl>
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Usuń" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
