@model IEnumerable<Zamowienie>

@{
    ViewData["Title"] = "Lista Zamówień";
}

<h1>Lista Zamówień</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Utwórz nowy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataZamowienia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uzytkownik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusZamowienia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataZamowienia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uzytkownik.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusZamowienia.Nazwa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Więcej</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

