@model Zamowienie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 style="text-align: center;">Szczegóły zamówienia</h1>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>Data zamówienia</th>
                        <td>@Html.DisplayFor(model => model.DataZamowienia)</td>
                    </tr>
                    <tr>
                        <th>Suma</th>
                        <td>@Html.DisplayFor(model => model.Suma)</td>
                    </tr>
                    <tr>
                        <th>Email użytkownika</th>
                        <td>@Html.DisplayFor(model => model.Uzytkownik.Email)</td>
                    </tr>
                    <tr>
                        <th>Status zamówienia</th>
                        <td>@Html.DisplayFor(model => model.StatusZamowienia.Nazwa)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Edytuj</a>
        <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
    </div>
</div>
