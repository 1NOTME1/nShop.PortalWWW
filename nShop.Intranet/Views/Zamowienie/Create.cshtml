@model Zamowienie

@{
    ViewData["Title"] = "Utwórz";
}

<h1 class="text-center">Utwórz zamówienie</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="UzytkownikId" class="control-label"></label>
                    <select asp-for="UzytkownikId" class="form-control" asp-items="ViewBag.UzytkownikId"></select>
                </div>
                
                <div class="form-group">
                    <label asp-for="DataZamowienia" class="control-label"></label>
                    <input asp-for="DataZamowienia" class="form-control" />
                    <span asp-validation-for="DataZamowienia" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="StatusZamowieniaId" class="control-label"></label>
                    <select asp-for="StatusZamowieniaId" class="form-control" asp-items="ViewBag.StatusZamowieniaId"></select>
                </div>
                
                <div class="form-group">
                    <label asp-for="Suma" class="control-label"></label>
                    <input asp-for="Suma" class="form-control" />
                    <span asp-validation-for="Suma" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Utwórz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-3">
    <a asp-action="Index" class="btn btn-link">Powrót do listy</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
