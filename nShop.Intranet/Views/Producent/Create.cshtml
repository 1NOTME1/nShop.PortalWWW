@model nShop.Data.Data.Sklep.Producent

@{
    ViewData["Title"] = "Utwórz Producenta";
}

<h1 class="text-center">Utwórz Producenta</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nazwa" class="control-label">Nazwa producenta</label>
                    <input asp-for="Nazwa" class="form-control" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Opis" class="control-label">Opis producenta</label>
                    <textarea asp-for="Opis" class="form-control"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SciezkaLogo" class="control-label">Ścieżka logo</label>
                    <input asp-for="SciezkaLogo" class="form-control" type="text" />
                    <span asp-validation-for="SciezkaLogo" class="text-danger"></span>
                </div>

                <div class="form-group" style="text-align: center;">
                    <input type="submit" value="Utwórz" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
