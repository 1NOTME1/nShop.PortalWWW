@model Produkt

@{
    ViewData["Title"] = "Edytuj Produkt";
}

<h1 style="text-align: center;">Edytuj Produkt</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" style="margin-top: 20px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nazwa" class="control-label label">Nazwa</label>
                    <input asp-for="Nazwa" class="form-control" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Opis" class="control-label label">Opis</label>
                    <textarea asp-for="Opis" class="form-control"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cena" class="control-label label">Cena</label>
                    <input asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="KategoriaId" class="control-label label">Kategoria</label>
                    <select asp-for="KategoriaId" class="form-control" asp-items="@ViewBag.KategoriaId"></select>
                    <span asp-validation-for="KategoriaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProducentId" class="control-label label">Producent</label>
                    <select asp-for="ProducentId" class="form-control" asp-items="@ViewBag.ProducentId"></select>
                    <span asp-validation-for="ProducentId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SciezkaZdjecia" class="control-label label">Ścieżka Zdjęcia</label>
                    <input asp-for="SciezkaZdjecia" class="form-control" />
                    <span asp-validation-for="SciezkaZdjecia" class="text-danger"></span>
                </div>

                <div class="form-group" style="text-align: center;">
                    <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
