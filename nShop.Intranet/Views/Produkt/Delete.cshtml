@model nShop.Data.Data.Sklep.Produkt

@{
    ViewData["Title"] = "Usuń Produkt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Usuń Produkt</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Czy na pewno chcesz usunąć ten produkt?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nazwa)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nazwa)</dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Opis)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Opis)</dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cena)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cena)</dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SciezkaZdjecia)</dt>
                <dd class="col-sm-8">
                    <img src="@Model.SciezkaZdjecia" alt="Zdjęcie produktu" class="img-fluid" />
                </dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Kategoria.Nazwa)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Kategoria.Nazwa)</dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Producent.Nazwa)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Producent.Nazwa)</dd>
            </dl>
            <form asp-action="Delete" method="post" style="text-align: center;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Usuń" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
