@model nShop.Data.Data.Sklep.Kategoria

@{
    ViewData["Title"] = "Usuń Kategorię";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Usuń Kategorię</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center">Czy na pewno chcesz usunąć tę kategorię?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Nazwa:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nazwa)</dd>
                <dt class="col-sm-4">Opis:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Opis)</dd>
            </dl>
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Usuń" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
