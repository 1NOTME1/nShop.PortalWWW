@model IEnumerable<nShop.Intranet.Models.Sklep.Kategoria>

@{
    ViewData["Title"] = "Lista Kategorii";
}

<h1>Lista Kategorii</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Dodaj nową kategorię</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Opis)
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
