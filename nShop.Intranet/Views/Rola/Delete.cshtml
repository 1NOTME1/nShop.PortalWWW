@model nShop.Data.Data.Sklep.Rola

@{
    ViewData["Title"] = "Usuń";
}

<h1 class="text-center">Usuń Rolę</h1>
<h3 class="text-center text-danger">Czy na pewno chcesz usunąć tę rolę?</h3>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4 class="text-center">Szczegóły roli</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 col-md-2 font-weight-bold">Nazwa:</dt>
                <dd class="col-sm-8 col-md-10">@Html.DisplayFor(model => model.Nazwa)</dd>

                <dt class="col-sm-4 col-md-2 font-weight-bold">Opis:</dt>
                <dd class="col-sm-8 col-md-10">@Html.DisplayFor(model => model.Opis)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-2">Usuń</button>
                <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
            </form>
        </div>
    </div>
</div>
