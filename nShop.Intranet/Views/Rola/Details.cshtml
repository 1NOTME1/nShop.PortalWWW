@model nShop.Data.Data.Sklep.Rola

@{
    ViewData["Title"] = "Szczegóły Roli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 style="text-align: center;">Szczegóły Roli</h1>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>Nazwa</th>
                        <td>@Html.DisplayFor(model => model.Nazwa)</td>
                    </tr>
                    <tr>
                        <th>Opis</th>
                        <td>@Html.DisplayFor(model => model.Opis)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Edytuj</a>
        <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
    </div>
</div>
