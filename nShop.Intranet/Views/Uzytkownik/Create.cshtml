@model nShop.Data.Data.Sklep.Uzytkownik

@{
    ViewData["Title"] = "Utwórz";
}

<h1 class="text-center">Utwórz użytkownika</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Imie" class="control-label">Imię</label>
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Haslo" class="control-label">Hasło</label>
                    <input asp-for="Haslo" class="form-control" />
                    <span asp-validation-for="Haslo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RolaId" class="control-label">Rola</label>
                    <select asp-for="RolaId" class="form-control" asp-items="ViewBag.RolaId"></select>
                    <span asp-validation-for="RolaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Utwórz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-3">
    <a asp-action="Index" class="btn btn-link">Powrót do listy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
