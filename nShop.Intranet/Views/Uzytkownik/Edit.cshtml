@model nShop.Data.Data.Sklep.Uzytkownik

@{
    ViewData["Title"] = "Edytuj Użytkownika";
}

<h1 style="text-align: center;">Edytuj Użytkownika</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" style="margin-top: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Email" class="control-label label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label label">Imię</label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label label">Nazwisko</label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Haslo" class="control-label label">Hasło</label>
                <input asp-for="Haslo" class="form-control" />
                <span asp-validation-for="Haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolaId" class="control-label label">Rola</label>
                <select asp-for="RolaId" class="form-control" asp-items="ViewBag.RolaId"></select>
                <span asp-validation-for="RolaId" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: center;">
                <input type="submit" value="Zatwierdź zmiany" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
